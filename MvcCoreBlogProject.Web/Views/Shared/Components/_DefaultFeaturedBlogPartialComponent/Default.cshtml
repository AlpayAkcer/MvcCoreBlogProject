@model List<Blog>

<div class="carausel-post-1 hover-up border-radius-10 overflow-hidden transition-normal position-relative wow fadeInUp animated">
    <div class="arrow-cover"></div>
    <div class="slide-fade">
        @foreach (var item in Model)
        {
            <div class="position-relative post-thumb">
                <div class="thumb-overlay img-hover-slide position-relative" style="background-image: url(@item.ImageUrl)">
                    <a class='img-link' href='/Blog/Detail/@item.BlogID'></a>
                    <span class="top-left-icon bg-warning"><i class="elegant-icon icon_star_alt"></i></span>
                    <div class="post-content-overlay text-white ml-30 mr-30 pb-30">
                        <div class="entry-meta meta-0 font-small mb-20">
                            <a href='/Blog/Detail/@item.BlogID'><span class="post-cat text-info text-uppercase">@item.Category.Name</span></a>
                            <a href='/Blog/Detail/@item.BlogID'><span class="post-cat text-success text-uppercase">Animal</span></a>
                        </div>
                        <h3 class="post-title font-weight-900 mb-20">
                            <a class='text-white' href='/Blog/Detail/@item.BlogID'>@item.Title</a>
                        </h3>
                        <div class="entry-meta meta-1 float-left font-x-small text-uppercase">
                            <span class="post-on text-white">@(((DateTime)item.CreateDate).ToString("dd/MM/yyyy"))</span>
                            <span class="post-by text-white">@item.TopViewCount Görüntüleme</span>
                        </div>

                    </div>
                </div>
            </div>
        }

    </div>
</div>