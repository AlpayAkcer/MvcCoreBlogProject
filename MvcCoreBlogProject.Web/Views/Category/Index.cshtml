@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="col">
                    <a href="/Dashboard/Category/" class="btn btn-dark">Kategori Listesi</a>
                </div>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Dashboard">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Dashboard/AddCategory">Yeni Kategori</a></li>
                    <li class="breadcrumb-item active">Liste</li>

                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-hover  table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>
                                    <td>
                                        @if (item.IsStatus == false)
                                        {
                                            <small class="badge badge-danger">Pasif</small>
                                        }
                                        else
                                        {
                                            <small class="badge badge-success">Aktif</small>
                                        }
                                    <td>
                                        <a href="/Category/EditCategory/@item.CategoryID" class="btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                        <a href="/Category/DeleteCategory/@item.CategoryID" class="btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
