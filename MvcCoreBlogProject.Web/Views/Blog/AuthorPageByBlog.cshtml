@using X.PagedList
@using X.PagedList.Mvc.Core
@model PagedList<Blog>
@{
    ViewData["Title"] = "AuthorPageByBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="bg-grey pt-50 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!--author box-->
                <div class="author-bio mb-50 bg-white p-30 border-radius-10">
                    <div class="author-image mb-30">
                        <a href="#"><img src="@ViewBag.AuthorImage" alt="" class="avatar"></a>
                    </div>
                    <div class="author-info">
                        <h3 class="font-weight-900">
                            <span class="vcard author"><span class="fn"><a href="#" title="Posts by Steven" rel="author">@ViewBag.Authorname</a></span></span>
                        </h3>
                        <h5 class="text-mute">@ViewBag.AuthorTitle</h5>
                        <div class="author-description text-muted">
                            @ViewBag.Description
                        </div>
                        <strong class="text-muted">Follow: </strong>
                        <ul class="header-social-network d-inline-block list-inline color-white mb-20">
                            <li class="list-inline-item"><a class="fb" href="#" target="_blank" title="Facebook"><i class="elegant-icon social_facebook"></i></a></li>
                            <li class="list-inline-item"><a class="tw" href="#" target="_blank" title="Tweet now"><i class="elegant-icon social_twitter"></i></a></li>
                            <li class="list-inline-item"><a class="pt" href="#" target="_blank" title="Pin it"><i class="elegant-icon social_pinterest"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="post-module-2">
                    <div class="widget-header-2 position-relative mb-30  wow fadeInUp animated">
                        <h5 class="mt-5 mb-30">@ViewBag.Authorname yazıları</h5>
                    </div>
                    <div class="loop-list loop-list-style-1">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <article class="col-md-4 mb-40 wow fadeInUp  animated">
                                    <div class="post-card-1 border-radius-10 hover-up">
                                        <div class="post-thumb thumb-overlay img-hover-slide position-relative" style="background-image: url(@item.ImageUrl)">
                                            <a class='img-link' href='/Blog/Detail/@item.BlogID'></a>
                                            <ul class="social-share">
                                                <li><a href="#"><i class="elegant-icon social_share"></i></a></li>
                                                <li><a class="fb" href="#" title="Share on Facebook" target="_blank"><i class="elegant-icon social_facebook"></i></a></li>
                                                <li><a class="tw" href="#" target="_blank" title="Tweet now"><i class="elegant-icon social_twitter"></i></a></li>
                                                <li><a class="pt" href="#" target="_blank" title="Pin it"><i class="elegant-icon social_pinterest"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="post-content p-30">
                                            <div class="entry-meta font-small mb-10">
                                                <a href='/Blog/Detail/@item.BlogID'><span class="post-cat text-info">@item.Category.Name</span></a>
                                                <a href='/Blog/Detail/@item.BlogID'><span class="post-cat text-success">@item.Author.Name @item.Author.Surname</span></a>
                                            </div>
                                            <div class="d-flex post-card-content">
                                                <h5 class="post-title mb-20 font-weight-900">
                                                    <a href='/Blog/Detail/@item.BlogID'>@item.Title</a>
                                                </h5>
                                                <div class="post-excerpt mb-25 font-small text-muted">
                                                    <p>@item.Description…</p>
                                                </div>
                                                <div class="entry-meta meta-1 float-left font-x-small text-uppercase">
                                                    <span class="post-on">@(((DateTime)item.CreateDate).ToString("dd/MM/yyyy"))</span>
                                                    <span class="post-by">@item.TopViewCount Görüntüleme</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            }
                        </div>
                    </div>
                </div>

                <div class="pagination-area mb-30 wow fadeInUp animated">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                            @Html.PagedListPager(Model, sayfa => Url.Action("AuthorPageByBlog", "Blog",
                                 new
                                 {
                                     sayfa = sayfa

                                 }), new X.PagedList.Web.Common.PagedListRenderOptions
                                {
                                 LiElementClasses = new string[] { "page-item" },
                                 PageClasses = new string[] { "page-link" }
                                })
                        </ul>
                    </nav>
                </div>
            </div>

        </div>
    </div>
</main>

