
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="bg-grey pt-80 pb-50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10">
                <div class="login_wrap widget-taber-content p-30 bg-white border-radius-10">
                    <div class="padding_eight_all bg-white">
                        <div class="heading_s1 text-center">
                            <h3 class="mb-30 font-weight-900">Kullanıcı Girişi</h3>
                        </div>
                        <form method="post">
                            <div class="form-group">
                                <input type="text" required="" class="form-control" name="Mail" placeholder="Email Adresiniz">
                            </div>
                            <div class="form-group">
                                <input class="form-control" required="" type="password" name="Password" placeholder="Password">
                            </div>
                            <div class="login_footer form-group">

                                <a class="text-muted" href="#">Şifreni mi unuttun?</a>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="button button-contactForm btn-block">Giriş Yap</button>
                            </div>
                        </form>
                        <div class="text-muted text-center">Henüz bir hesabın yok mu? <a href='/page-register'>O zaman Kayıt Ol</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

