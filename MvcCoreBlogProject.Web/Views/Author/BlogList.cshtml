@model List<Blog>
@{
    ViewData["Title"] = "BlogList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
    int count = 0;
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="col">
                    <a href="/Author/BlogList/" class="btn btn-dark">Blog Listesi</a>
                </div>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Author">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Author/AddBlog">Yeni Blog Yazısı</a></li>
                    <li class="breadcrumb-item active">Liste</li>

                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-hover  table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Kategori</th>
                                <th>Yeni</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>

                                    <td>@item.Category.Name</td>
                                    <td>
                                        @if (item.IsFeatured == false)
                                        {
                                            <small class="badge badge-danger">Pasif</small>
                                        }
                                        else
                                        {
                                            <small class="badge badge-success">Aktif</small>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsStatus == false)
                                        {
                                            <small class="badge badge-danger">Pasif</small>
                                        }
                                        else
                                        {
                                            <small class="badge badge-success">Aktif</small>
                                        }

                                    <td>@(((DateTime)item.CreateDate).ToString("dd/MM/yyyy"))</td>
                                    <td>
                                        <a href="/Author/EditBlog/@item.BlogID" class="btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                        <a href="/Author/DeleteBlog/@item.BlogID" class="btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

